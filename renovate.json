{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "renovate-pr"
  ],
  "recreateClosed": true,
  "schedule": [
    "every weekend"
  ],
  "stabilityDays": 3,
  "ignoreUnstable": true,
  "groupName": "all dependencies",
  "groupSlug": "all",
  "separateMajorMinor": false,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
